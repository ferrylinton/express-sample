{
  "name": "express-handlebars-mysql-crud-ts",
  "version": "1.0.0",
  "description": "CRUD Application With Express JS and Handlebars",
  "main": "./dist/server.js",
  "scripts": {
    "clean": "rimraf dist",
    "start": "cross-env NODE_ENV=production node ./dist/server.js",
    "serve": "cross-env NODE_ENV=development node ./dist/server.js",
    "build-be": "webpack --config ./webpack.config.be.js --mode=production",
    "build-fe": "webpack --config ./webpack.config.fe.js --mode=production",
    "build": "npm run clean && npm run build-fe && npm run build-be",
    "dev-be": "webpack --config ./webpack.config.be.js --watch --mode=development",
    "dev-fe": "webpack --config ./webpack.config.fe.js --watch --mode=development",
    "dev-serve": "nodemon",
    "dev": "cross-env NODE_ENV=development concurrently 'npm:dev-*'"
  },
  "keywords": [
    "typescript",
    "express",
    "handlebars",
    "msyql",
    "webpack"
  ],
  "author": "ferrylinton",
  "license": "ISC",
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/i18n": "^0.13.12",
    "@types/node": "^22.5.2",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "html-bundler-webpack-plugin": "^3.17.4",
    "nodemon": "^3.1.4",
    "postcss-import": "^16.1.0",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^10.0.2",
    "rimraf": "^5.0.5",
    "ts-loader": "^9.5.1",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-favicon": "^2.0.4",
    "express-handlebars": "^8.0.1",
    "helmet": "^7.1.0",
    "i18n": "^0.15.1",
    "mysql2": "^3.11.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  }
}
