{
  "name": "express-handlebars-simple-ts",
  "version": "1.0.0",
  "description": "Simple Express JS App with handlebars",
  "main": "./dist/server.js",
  "scripts": {
    "clean": "rimraf dist",
    "start": "node ./dist/server.js",
    "build-be": "webpack --config ./webpack.config.be.js --mode=production",
    "build-fe": "webpack --config ./webpack.config.fe.js --mode=production",
    "build": "npm run clean && concurrently 'npm:build-*'",
    "dev-be": "webpack --config ./webpack.config.be.js --watch --mode=development",
    "dev-fe": "webpack --config ./webpack.config.fe.js --watch --mode=development",
    "dev": "npm run clean && concurrently 'npm:dev-*'",
    "test": "tsx ./src/test.ts"
  },
  "keywords": [
    "typescript",
    "express",
    "handlebars"
  ],
  "author": "ferrylinton",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "handlebars-loader": "^1.7.3",
    "html-bundler-webpack-plugin": "^3.17.4",
    "postcss-import": "^16.1.0",
    "postcss-loader": "^8.1.1",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.10",
    "ts-loader": "^9.5.1",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.7.0",
    "typescript": "^5.5.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0",
    "webpack-shell-plugin-next": "^2.3.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-favicon": "^2.0.4",
    "express-handlebars": "^8.0.1",
    "helmet": "^7.1.0"
  }
}
