{
    "compilerOptions": {
        "target": "ES6",
        "module": "system",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "rootDir": "./src",
        "checkJs": true,
        "allowJs": true,
        "experimentalDecorators": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "./node_modules",
        "dist"
    ]
}